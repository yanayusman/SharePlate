<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomPickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:buttonBarButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="DonateInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/primary</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
    </style>

    <style name="DonateButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <!--non selected star color-->
        <item name="colorControlNormal">#4D000000</item>
        <!--selected star color-->
        <item name="colorControlActivated">@color/dialog_color_1</item>
    </style>

</resources>